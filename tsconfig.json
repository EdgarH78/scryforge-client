{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ES2020",
      "moduleResolution": "Node",
      "lib": ["ES2021", "DOM"],
      "types": ["@league-of-foundry-developers/foundry-vtt-types"],
      "allowJs": false,
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist",
      "baseUrl": "./",
      "paths": {
        "foundry-vtt-types": ["node_modules/@league-of-foundry-developers/foundry-vtt-types"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  